<%= link_to group_path(@group) do%>
  <button class="btn-secondary mb-4">Back to <%=@group.name%></button>
<%end%>
<h1 class="text-3xl">Edit Group Name and Description</h1>
<%= form_with(model: @group) do |f| %>
  <%= f.label :name, autofocus: true %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%=f.submit class: 'btn-success'%>
<%end%>
