<%= link_to groups_path(@groups) do%>
  <button class="btn-secondary mb-4">Back to My Groups</button>
<%end%>
<h1 class="text-3xl">Create New Group</h1>
<%= form_with(model: @group) do |f| %>
  <%= f.label :name, autofocus: true %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%=f.submit class: 'btn-success'%>
<%end%>
